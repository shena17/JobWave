<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarSize="0dp"
    tools:context=".ReviewSupportServiceRequest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoView11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue"
                android:padding="10dp"
                android:transitionName="logo_image" />

            <View
                android:id="@+id/waves11"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/wave" />

            <View
                android:id="@+id/userIcon"
                android:layout_width="124dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_person" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="180dp"
                android:layout_height="58dp"
                android:layout_gravity="bottom|center|center_horizontal"
                android:background="#FFFFFF"
                android:fontFamily="@font/archivo_black"
                android:gravity="center|top"
                android:text="Anna Gomez"
                android:textColor="#757575"
                android:textSize="25sp"
                android:textStyle="bold" />

        </FrameLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="489dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="483dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="204dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/archivo_black"
                android:gravity="center|top"
                android:text="annagomez@gmail.com"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/archivo_black"
                android:text="Concerns : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConcern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/archivo_black"
                android:text="I am currently a university undergraduate, and I am concerned about the online platforms where I can improve my professional qualifications with verified certificates."
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editbtn"
                    style="@style/Button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="5dp"
                    android:width="20dp"
                    android:minWidth="70dp"
                    android:text="EDIT" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deletebtn"
                    style="@style/Button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="1"
                    android:text="DELETE" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>