<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JobWave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Screen-->
    <style name="Screen">
        <item name="android:background">@color/white</item>
    </style>

    <!--    Text-->
    <style name="Text">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--    Text-->
    <style name="TextSecondary">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    Button-->
    <style name="Button">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    Button 2-->
    <style name="ButtonSecondary">
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--    Dashboard background-->
    <style name="dashboard">
        <item name="android:background">#D5FFFEFC</item>
    </style>

<!--    Dashboard nav-->
    <style name="navbar">
        <item name="android:color">@color/grey</item>
        <item name="android:drawable">@color/grey</item>
    </style>

<!--    Job view-->
    <style name="jobText">
        <item name="android:textColor">@color/darkblue</item>
    </style>

    <style name="jobCompany">
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>